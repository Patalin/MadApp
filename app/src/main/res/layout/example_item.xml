<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/book_sale_icon1"
            android:layout_width="100dp"
            android:layout_height="135dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/book_sale_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/book_sale_icon1"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/book_sale_icon1"/>

        <TextView
            android:id="@+id/book_sale_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_below="@+id/book_sale_title1"
            android:layout_toEndOf="@+id/book_sale_icon1"
            android:layout_toRightOf="@+id/book_sale_icon1"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>